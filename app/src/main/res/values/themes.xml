<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme (Day Mode) -->
    <style name="Base.Theme.EkKoshishAUr" parent="Theme.Material3.Light.NoActionBar">

        <!-- Primary Colors -->
        <item name="colorPrimary">#000000</item>  <!-- Black Top Bar -->
        <item name="colorOnPrimary">#FFFFFF</item> <!-- White Text on Top Bar -->

        <!-- Secondary Colors -->
        <item name="colorSecondary">#03DAC5</item>
        <item name="colorOnSecondary">#000000</item>

        <!-- Background & Surface -->
        <item name="android:colorBackground">#FFFFFF</item>  <!-- White background -->
        <item name="colorSurface">#F5F5F5</item>  <!-- Light surface color -->
        <item name="colorOnSurface">#000000</item>  <!-- Black text -->

        <!-- Status Bar & Navigation Bar -->
        <item name="android:statusBarColor">#000000</item>  <!-- Black Status Bar -->
        <item name="android:navigationBarColor">#FFFFFF</item>  <!-- White Navigation Bar -->

        <!-- Font & Typography -->
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#000000</item>

        <!-- Exclude button and edit text customization -->
        <item name="android:buttonStyle">@android:style/Widget.Button</item>
        <item name="android:editTextStyle">@android:style/Widget.EditText</item>

    </style>

</resources>
